{
  "name": "@uktrade/datahub-header",
  "version": "1.0.0",
  "description": "The Data Hub header component",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node src/app/server.js",
	 "watch": "run-p watch:*",
	 "watch:app": "nodemon src/app/server.js",
    "watch:sass": "npm run sass:dev && node-sass src/component/header.scss src/app/header.css --source-map src/app/header.css.map --source-map-contents -w -r",
    "sass:dev": "node-sass src/component/header.scss src/app/header.css --source-map src/app/header.css.map --source-map-contents",
    "sass:prod": "node-sass src/component/header.scss src/app/header.css -x --output-style compressed"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uktrade/datahub-header.git"
  },
  "author": "Graham Veal",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/uktrade/datahub-header/issues"
  },
  "homepage": "https://github.com/uktrade/datahub-header#readme",
  "devDependencies": {
    "eslint": "^5.16.0",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.0",
    "npm-run-all": "^4.1.5",
    "nunjucks": "^3.2.0"
  }
}
